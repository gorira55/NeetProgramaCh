<p id="notice"><%= notice %></p>
<h1><%= link_to 'に〜とプログラマちゃんねる', posts_index_url %></h1>
<h1>おすすめYoutube投稿掲示板</h1>

<table>
  <thead>
    <tr>
      <th>説明</th>
      <th>動画</th>
      <th colspan="3"></th>
      <%= link_to '投稿する', new_youtube_path %>
    </tr>
  </thead>

  <tbody>
    <% @youtubes.each do |youtube| %>
      <tr>
        <td><%= youtube.body %></td>
        <td><iframe width="560" height="315" src="https://www.youtube.com/embed/<%=youtube.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
        <td><%= link_to '詳細', youtube %></td>
        <td><%= link_to '編集', edit_youtube_path(youtube) %></td>
        <td><%= link_to '削除', youtube, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

